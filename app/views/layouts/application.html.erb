<!DOCTYPE html>
<html>
  <head>
    <title>Horizon</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <header>
      <section class='logo'>
        <%= render 'layouts/header' %>
      </section>
      <nav>
        <% if logged_in? %>
          <%= render 'layouts/logged_in_section' %>
        <% else %>
          <%= render 'layouts/logged_out_section' %>
        <% end %>
      </nav>
    </header>
    <section class='page-content'>
      <%= yield %>
    </section>
  </body>
</html>
