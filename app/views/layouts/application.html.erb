<!DOCTYPE html>
<html>
  <head>
    <title>Horizon</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <% if logged_in? %>
      <%= render 'layouts/logged_in_section' %>
    <% else %>
      <%= render 'layouts/logged_out_section' %>
    <% end %>
    <%= yield %>

  </body>
</html>
